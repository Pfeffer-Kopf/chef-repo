{
  "name": "template",
  "description": "Create a tomix/mgn server template ",
  "json_class": "Chef::Role",
  "default_attributes": {
    "java": {
      "install_flavor": "openjdk"
    },
    "tomcat": {
      "base_version": 7,
      "java_options": "-XX:MaxPermSize=256m -Xmx3G -Xms1G -Drole=$ROLE -Dserver.id=$SERVER_NAME -DyouappiHome=$YOUAPPI_HOME",
      "keytool": "/usr/bin/keytool"
    },
    "authorization": {
      "sudo": {
        "include_sudoers_d": true
      }
    },
    "collectd": {
      "version": "5.4.0",
      "url": "http://fossies.org/linux/privat/collectd-5.4.0.tar.gz",
      "checksum": "c434548789d407b00f15c361305766ba4e36f92ccf2ec98d604aab2a46005239",
      "name": "SERVER_NAME",
      "graphite_ipaddress": "graphite.youappi.com",
      "plugins": {
        "syslog": {
          "config": {
            "LogLevel": "Info"
          }
        },
        "disk": {
        },
        "swap": {
        },
        "memory": {
        },
        "cpu": {
        },
        "interface": {
          "config": {
            "Interface": "lo",
            "IgnoreSelected": true
          }
        },
        "df": {
          "config": {
            "ReportReserved": false,
            "FSType": [
              "proc",
              "sysfs",
              "fusectl",
              "debugfs",
              "devtmpfs",
              "devpts",
              "tmpfs"
            ],
            "IgnoreSelected": true
          }
        },
        "write_graphite": {
          "config": {
          }
        }
      }
    }
  },
  "override_attributes": {
    "java": {
      "jdk_version": 7
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[apt::default]",
    "recipe[java]",
    "recipe[nginx]",
    "recipe[tomcat]",
    "recipe[collectd]",
    "recipe[collectd::attribute_driven]",
    "recipe[youappi-base]",
    "recipe[chef-client::delete_validation]"
  ],
  "env_run_lists": {
  }
}
